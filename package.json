{
    "name": "nexus-oauth2-proxy-plugin",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "webpack --config ./src/frontend/webpack.config.js",
        "build-all": "webpack --config ./src/frontend/webpack.config.js",
        "test": "jest",
        "test-coverage": "jest --coverage",
        "test-watch": "jest --watch",
        "watch": "webpack --watch --config ./src/frontend/webpack.config.js"
    },
    "dependencies": {
        "@fortawesome/free-solid-svg-icons": "6",
        "axios": ">=1.6",
        "react": "18"
    },
    "devDependencies": {
        "@babel/core": "7",
        "@babel/preset-env": "7",
        "@babel/preset-react": "7",
        "@testing-library/dom": "10",
        "@testing-library/jest-dom": "6",
        "@testing-library/react": "16",
        "babel-jest": "29",
        "babel-loader": "9",
        "react-dom": "18",
        "jest": "29",
        "jest-environment-jsdom": "29",
        "terser-webpack-plugin": "5",
        "webpack": ">=5.94",
        "webpack-cli": "5"
    },
    "babel": {
        "presets": [
            "@babel/preset-react",
            "@babel/preset-env"
        ]
    },
    "jest": {
        "clearMocks": true,
        "coverageDirectory": "<rootDir>/target/frontend-coverage",
        "coveragePathIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "roots": [
            "<rootDir>/src/frontend"
        ],
        "testEnvironment": "jsdom",
        "testMatch": [
            "**/?(*.)test.jsx"
        ],
        "transform": {
            "^.+\\.jsx$": "babel-jest"
        }
    }
}